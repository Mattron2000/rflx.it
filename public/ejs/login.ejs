<link rel="stylesheet" href="css/login.css" async />

<div class="container-fluid h-custom">
	<div class="row d-flex justify-content-center align-items-center h-100">
		<div class="col-md-2 col-xl-2">
			<img src="assets/rflx-logo.svg" class="img-fluid icon_spin icon_size" />
		</div>
		<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 form_size">
			<form>
				<div data-mdb-input-init class="form-outline mb-4">
					<input
						type="email"
						id="form3Example3"
						class="form-control"
						placeholder="Enter a valid email address" />
					<label class="form-label" for="form3Example3">Email address</label>
				</div>

				<div data-mdb-input-init class="form-outline mb-3">
					<input
						type="password"
						id="form3Example4"
						class="form-control"
						placeholder="Enter password" />
					<label class="form-label" for="form3Example4">Password</label>
				</div>

				<div class="d-flex justify-content-between text-center">
					<p class="small fw-bold mt-2 pt-1 mb-0">
						Don't have an account?
						<a href="/register" class="link-info">Register</a>
					</p>
				</div>

				<div class="text-center text-lg-start mt-4 pt-2">
					<button
						type="submit"
						data-mdb-button-init
						data-mdb-ripple-init
						class="btn btn-primary"
						style="padding-left: 2.5rem; padding-right: 2.5rem">
						Login
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
